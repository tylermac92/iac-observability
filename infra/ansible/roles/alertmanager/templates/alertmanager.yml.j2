global:
    resolve_timeout: 5m

route:
    receiver: slack
    group_wait: 30s
    group_interval: 5m
    repeat_interval: 3h

receivers:
    - name: slack
      slack_configs:
        - api_url: {{ slack_webhook }}
          channel: "#alerts"
          send_resolved: true
          title: "{{ '{{ template \"slack.title\" . }}' }}"
          text: "{{ '{{ template \"slack.text\" . }}' }}"
