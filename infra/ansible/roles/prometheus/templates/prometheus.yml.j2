global:
  scrape_interval: 15s
  evaluation_interval: 15s

# scrape the Prometheus server itself
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

# scrape node_exporter on this host
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']
